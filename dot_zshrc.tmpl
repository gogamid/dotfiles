PS1='%F{blue}%B%~%b%f %F{green}‚ùØ%f '

HISTFILE=~/.history
HISTSIZE=100000
SAVEHIST=100000

setopt inc_append_history

autoload -U compinit && compinit

# vim mode
bindkey -v

# color
alias ls='ls --color=auto -hv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -c=auto'

alias l='ls'
alias ll='ls -l'
alias la='ls -lA'

alias mv='mv -i'

# extends the path
path() {
	export PATH=$PATH:$1
}

#paths
path "$HOME/context/tex/texmf-osx-arm64/bin"
path "/opt/homebrew/opt/make/libexec/gnubin"
path "/opt/homebrew/opt/libpq/bin"

# go
path $HOME/go/bin

# rust
path $HOME/.cargo/bin


# WezTerm
path /Applications/WezTerm.app/Contents/MacOS


# node
path ./node_modules/.bin
path $HOME/.local/bin/

export DOTNET_ROOT="/opt/homebrew/opt/dotnet@6/libexec"


#zoxide
eval "$(zoxide init --cmd cd zsh)"

fzfh() { eval $(history | fzf --tac | sed 's/^[ ]*[0-9]*[ ]*//') }

export EDITOR=nvim


# bun
export BUN_INSTALL="$HOME/.bun"
path "$BUN_INSTALL/bin"
[ -s "/Users/gamidli/.bun/_bun" ] && source "/Users/gamidli/.bun/_bun"

# opencode
path /Users/gamidli/.opencode/bin


if [  -f ~/.workZSH.sh ]; then
	source ~/.workZSH.sh
fi

if [  -f ~/.aliases.sh ]; then
	source ~/.aliases.sh
fi

