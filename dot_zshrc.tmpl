# oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)
source $ZSH/oh-my-zsh.sh

export EDITOR=nvim
export VISUAL=nvim
export LANG=en_US.UTF-8


# vim mode
bindkey -e

# color
alias ls='ls --color=auto -hv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -c=auto'

alias l='ls'
alias ll='ls -l'
alias la='ls -lA'
alias v='nvim'
alias t='tmux'
alias mv='mv -i'

export TERM=xterm-256color

# extends the path
path() {
	export PATH=$PATH:$1
}

#paths
path "$HOME/context/tex/texmf-osx-arm64/bin"
path "/opt/homebrew/opt/make/libexec/gnubin"
path "/opt/homebrew/opt/libpq/bin"

# go
path $HOME/go/bin

# rust
path $HOME/.cargo/bin


# WezTerm
path /Applications/WezTerm.app/Contents/MacOS


# node
path ./node_modules/.bin
path $HOME/.local/bin/

# dotnet
export DOTNET_ROOT="/opt/homebrew/opt/dotnet@6/libexec"

# fzf
if command -v fzf >/dev/null; then
	export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'

	source <(fzf --zsh)
  # Ctrl-R: history search
  bindkey '^R' fzf-history-widget
fi


#zoxide
eval "$(zoxide init --cmd cd zsh)"

# bun
export BUN_INSTALL="$HOME/.bun"
path "$BUN_INSTALL/bin"
[ -s "/Users/gamidli/.bun/_bun" ] && source "/Users/gamidli/.bun/_bun"

# opencode
path /Users/gamidli/.opencode/bin


if [  -f ~/.workZSH.sh ]; then
	source ~/.workZSH.sh
fi

if [  -f ~/.aliases.sh ]; then
	source ~/.aliases.sh
fi

