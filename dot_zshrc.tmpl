PS1='%F{blue}%B%~%b%f %F{green}‚ùØ%f '

HISTFILE=~/.history
HISTSIZE=100000
SAVEHIST=100000

setopt inc_append_history

autoload -U compinit && compinit

# vim mode
bindkey -v

# color
alias ls='ls --color=auto -hv'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -c=auto'

alias l='ls'
alias ll='ls -l'
alias la='ls -lA'

alias mv='mv -i'

#paths
export PATH="$HOME/context/tex/texmf-osx-arm64/bin:$PATH"
export PATH="/opt/homebrew/opt/make/libexec/gnubin:$PATH"
export PATH=$PATH:$HOME/go/bin
export PATH=$PATH:$HOME/.cargo/bin
export PATH="/Applications/WezTerm.app/Contents/MacOS:$PATH"
export PATH="/opt/homebrew/opt/libpq/bin:$PATH"
export PATH=$PATH:./node_modules/.bin
export PATH=$PATH:$HOME/.local/bin/
export DOTNET_ROOT="/opt/homebrew/opt/dotnet@6/libexec"

#zoxide
eval "$(zoxide init --cmd cd zsh)"

fzfh() { eval $(history | fzf --tac | sed 's/^[ ]*[0-9]*[ ]*//') }

export EDITOR=nvim


# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
[ -s "/Users/gamidli/.bun/_bun" ] && source "/Users/gamidli/.bun/_bun"

# opencode
export PATH=/Users/gamidli/.opencode/bin:$PATH


if [  -f ~/.workZSH.sh ]; then
	source ~/.workZSH.sh
fi

if [  -f ~/.aliases.sh ]; then
	source ~/.aliases.sh
fi

